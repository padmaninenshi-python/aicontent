<body>
    <div class="container">
        <div class="header">
            <h1>üöÄ AI Content Generator & SEO Optimizer</h1>
            <p>Enter a topic and let AI create amazing blog content with SEO optimization</p>
        </div>

        <div class="input-section">
            <div class="error-message" id="errorMessage"></div>
            
            <div class="input-group">
                <label for="topic">üìù Enter Your Blog Topic</label>
                <input 
                    type="text" 
                    id="topic" 
                    placeholder="e.g., The Future of Artificial Intelligence in Healthcare"
                    autocomplete="off"
                >
            </div>

            <button class="generate-btn" id="generateBtn" onclick="generateContent()">
                Generate Content
            </button>
        </div>

        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p style="color: white; font-size: 1.2rem;">ü§ñ AI is crafting your content...</p>
        </div>

        <div class="results" id="results">
            <div class="result-card">
                <h2>üìå Suggested Titles</h2>
                <div id="titlesContent" class="result-content"></div>
                <button class="copy-btn" onclick="copyToClipboard('titlesContent')">üìã Copy Titles</button>
            </div>

            <div class="result-card">
                <h2>üìù Blog Content</h2>
                <div id="blogContent" class="result-content blog-content"></div>
                <button class="copy-btn" onclick="copyToClipboard('blogContent')">üìã Copy Blog</button>
            </div>

            <div class="result-card">
                <h2>üîç SEO Keywords</h2>
                <div id="keywordsContent" class="result-content"></div>
                <button class="copy-btn" onclick="copyToClipboard('keywordsContent', true)">üìã Copy Keywords</button>
            </div>

            <div class="result-card">
                <h2>üìÑ Meta Description</h2>
                <div id="metaContent" class="result-content"></div>
                <button class="copy-btn" onclick="copyToClipboard('metaContent')">üìã Copy Meta Description</button>
            </div>
        </div>
    </div>

    <script>
        // Allow Enter key to submit
        document.getElementById('topic').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                generateContent();
            }
        });

        async function generateContent() {
            const topic = document.getElementById('topic').value.trim();
            const generateBtn = document.getElementById('generateBtn');
            const loading = document.getElementById('loading');
            const results = document.getElementById('results');
            const errorMessage = document.getElementById('errorMessage');

            // Reset
            errorMessage.classList.remove('active');
            results.classList.remove('active');

            // Validate
            if (!topic) {
                showError('Please enter a topic!');
                return;
            }

            // Show loading
            generateBtn.disabled = true;
            generateBtn.textContent = 'Generating...';
            loading.classList.add('active');

            try {
                const response = await fetch('/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ topic: topic })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Something went wrong');
                }

                // Display results
                displayResults(data);
                results.classList.add('active');

            } catch (error) {
                showError(error.message);
            } finally {
                generateBtn.disabled = false;
                generateBtn.textContent = 'Generate Content';
                loading.classList.remove('active');
            }
        }

        function displayResults(data) {
            // Display titles
            const titlesDiv = document.getElementById('titlesContent');
            const titlesList = data.titles.split('\n').filter(t => t.trim());
            titlesDiv.innerHTML = '<ul class="titles-list">' + 
                titlesList.map(title => `<li>${title}</li>`).join('') + 
                '</ul>';

            // Display blog content
            document.getElementById('blogContent').textContent = data.content;

            // Display keywords as tags
            const keywordsDiv = document.getElementById('keywordsContent');
            const keywords = data.keywords.split(',').map(k => k.trim()).filter(k => k);
            keywordsDiv.innerHTML = '<div class="keywords-container">' +
                keywords.map(kw => `<span class="keyword-tag">${kw}</span>`).join('') +
                '</div>';

            // Display meta description
            document.getElementById('metaContent').textContent = data.meta_description;

            // Scroll to results
            results.scrollIntoView({ behavior: 'smooth' });
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = '‚ùå ' + message;
            errorDiv.classList.add('active');
        }

        function copyToClipboard(elementId, isKeywords = false) {
            const element = document.getElementById(elementId);
            let textToCopy;

            if (isKeywords) {
                // For keywords, extract text from tags
                const tags = element.querySelectorAll('.keyword-tag');
                textToCopy = Array.from(tags).map(tag => tag.textContent).join(', ');
            } else {
                textToCopy = element.textContent;
            }

            navigator.clipboard.writeText(textToCopy).then(() => {
                alert('‚úÖ Copied to clipboard!');
            }).catch(err => {
                alert('‚ùå Failed to copy');
            });
        }
    </script>
</body>
